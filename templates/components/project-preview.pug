mixin project-preview(project, reverse)
  .flex.flex-column.flex-row-ns.items-center.items-start-p.justify-start-p.mv4.mv3-p(class=reverse ? 'justify-end-ns' : 'justify-start-ns')
    a.db.dn-p.mb2.mb0-ns.mw6.grow.br1(href="/" + project.path.toLowerCase(), class=reverse ? 'ml4-ns ml5-l order-2-ns' : 'mr4-ns mr5-l')
      img(src=project.preview).w-100.db.br1
    div.mt2.mt0-l(class=reverse ? 'order-1-ns tr-ns' : '')
      h4.mt0.mb2.mb3-ns.f4.f3-ns.fw6: +link("/" + project.path.toLowerCase())!= project.displayTitle ? project.displayTitle : project.title
      p.f4-l.mt2.mt3-ns.mb0.measure.lh-copy!= project.description

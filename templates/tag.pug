extends default

block page
  +header
    +header-text(class="fw6 f2-l") Things tagged
    +subheadline= tag
  main(role="main")
    +container
      - let count = 0
      each item in pagination.files
        if item.collection == 'projects'
          if count === 0
            +section-title Projects
          if count % 2 === 0
            +project-preview(item)
          else
            +project-preview(item, true)
          - count++
      - count = 0
      each item in pagination.files
        if item.collection == 'blog'
          if count === 0
            +section-title Blog Posts
          +blog-preview(item)
          - count++

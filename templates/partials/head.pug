//- head.jade
//- general meta & SEO stuff
meta(charset="UTF-8")
meta(content="width=device-width, initial-scale=1", name="viewport")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="theme-color", content="#f2930d")

//- Title & Description
block meta
  if title != site.title
    title= title + " â€¢ " + site.title
  else
    title= site.title

  meta(name="description", content=description ? description : site.description)

//- Open Graph / Twitter Card
meta(name="twitter:site", content="@lowmess")
meta(name="twitter:card", content="summary")
meta(property="og:site_name", content=site.title)
meta(property="og:title", name="twitter:title", content=title)
meta(property="og:url", content=path)
meta(property="og:image", content=image ? image : "/images/site.favicon-196.png")
if description
  meta(property="og:description", name="twitter:description", content=description)
else if snippet
  meta(property="og:description", name="twitter:description", content=snippet)
else
  meta(property="og:description", name="twitter:description", content=site.description)

//- Pages
link(rel="canonical", href=path)
if next
  link(rel="next", href="/" + next.path)
if previous
  link(rel="previous", href="/" + previous.path)


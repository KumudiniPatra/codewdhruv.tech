extends default

block page
  +header
    .dib.db-l.db-p
      if displayTitle
        +headline= displayTitle
      else
        +headline= title
    +header-text: time(datetime=date.utc())= date.utc().format("MMMM DD, YYYY")
    if tags
      each tag in tags
        +header-text(class="dn-p"): +link("/tagged/" + tag.replace(' ', '-').toLowerCase())= tag
  main(role="main")
    +container
      article.content!=contents
      //- .dn-p
        +rule
        if collections.blog[0].title === title
          +section-title Next Blog Post: #[+link('/' + collections.blog[1].path)= collections.blog[1].title]
        else
          +section-title Latest Blog Post: #[+link('/' + collections.blog[0].path)= collections.blog[0].title]

      .row.clearfix
        .col.col--img
          img(src="//lowmess.com/work/2015/march/images/calendar.jpg", srcset="//lowmess.com/work/2015/march/images/calendar@2x.jpg 1920w, //lowmess.com/work/2015/march/images/calendar.jpg 960w", sizes="(min-width: 40.1rem) 960px, 100vw")
      .row.clearfix
        .col.col--md-half.col--img
          img(src="//lowmess.com/work/2015/march/images/detail-1.jpg", srcset="//lowmess.com/work/2015/march/images/detail-1@2x.jpg 900w, //lowmess.com/work/2015/march/images/detail-1.jpg 450w", sizes="(min-width: 40.1rem) 450px, 100vw")
        .col.col--md-half.col--img
          img(src="//lowmess.com/work/2015/march/images/detail-2.jpg", srcset="//lowmess.com/work/2015/march/images/detail-2@2x.jpg 900w, //lowmess.com/work/2015/march/images/detail-2.jpg 450w", sizes="(min-width: 40.1rem) 450px, 100vw")
